{
	"name": "workout-ui",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "dotenvx run -f .env -- vite dev",
		"build": "dotenvx run -f .env -- vite build",
		"preview": "dotenvx run -f .env -- vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"supabase:gen": "supabase gen types --lang=typescript --project-id $SUPABASE_PROJECT_REF --schema public > src/lib/supabase/database.types.ts",
		"supabase:generate": "dotenvx run -f .env -- pnpm supabase:gen && pnpm format",
		"test:unit": "dotenvx run -f .env -- vitest --run",
		"test": "npm run test:unit && npm run test:e2e",
		"test:ui": "vitest --ui",
		"test:e2e": "playwright test",
		"prepare": "husky && husky install"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^1.22.0",
		"@faker-js/faker": "^9.2.0",
		"@fontsource-variable/overpass": "^5.1.1",
		"@playwright/test": "^1.48.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.8.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/eslint": "^9.6.1",
		"@types/lodash.debounce": "^4.0.9",
		"@vite-pwa/assets-generator": "^0.2.6",
		"@vite-pwa/sveltekit": "^0.6.6",
		"@vitest/ui": "^2.1.4",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"happy-dom": "^15.11.0",
		"husky": "^9.1.6",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"supabase": "^1.219.2",
		"svelte": "^5.1.13",
		"svelte-check": "^4.0.6",
		"type-fest": "^4.26.1",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0",
		"vite": "^5.4.10",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@supabase/ssr": "^0.5.1",
		"@supabase/supabase-js": "^2.46.1",
		"lodash.debounce": "^4.0.8"
	},
	"lint-staged": {
		"*.{svelte,js,ts,css,md}": "prettier --write"
	}
}
